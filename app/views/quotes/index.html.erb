<%= turbo_stream_from current_company, :quotes %>

<main class="container">
  <div class="header">
    <h1><%= Quote.model_name.human.pluralize %></h1>
    <%= link_to "New #{Quote.model_name.human.downcase}", new_quote_path, class: "btn btn--primary", data: { turbo_frame: dom_id(Quote.new) } %>
  </div>

  <%= turbo_frame_tag Quote.new %>

  <%= turbo_frame_tag :quotes do %>
    <%= render 'quotes/empty_state' %>
    <%= render @quotes %>
  <% end %>
</main>
